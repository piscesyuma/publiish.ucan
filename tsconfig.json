{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "paths": {},
    "composite": true,
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "importHelpers": true,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "target": "ES2021",
    "sourceMap": false,
    "allowJs": false,
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop":true,
    "types": ["node"]                        /* Skip type checking all .d.ts files. */
  },
  "exclude": ["node_modules", "dist", "test/**/*", "*.spec.ts"],
  // "include": ["src/*", "src/types.ts"]
}