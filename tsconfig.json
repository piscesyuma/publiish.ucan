{
  "compilerOptions": {
    "strict": true,
    // project options
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true,
    "target": "ES2020",
    "lib": [
      "ES2020",
      "ES2020.Promise",
      "ES2020.String",
      "ES2020.BigInt",
      "DOM"
    ],
    "noEmit": false,
    "noEmitOnError": true,
    "emitDeclarationOnly": true,
    "sourceMap": false,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "composite": true,
    "isolatedModules": true,
    "removeComments": false,
    // module resolution
    "esModuleInterop": true,
    "moduleResolution": "Node",
    // linter checks
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    // advanced
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "resolveJsonModule": true
  },
  "include": ["src", "src/types.ts"]
}